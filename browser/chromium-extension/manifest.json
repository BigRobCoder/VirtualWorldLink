{
  // Required
  "name": "Virtual World Link",
  "version": "0.0.1",
  "manifest_version": 2,

  // Recommended
  "description": "Browse VR worlds",

  // Functional
  "permissions": ["tabs", "bookmarks", "<all_urls>"],
  "background": {
    "persistent": true,
    "scripts": ["main.js"]
  },
  "browser_action": {
    "default_title": "Open VWL window"
  },
  "commands": {
    "toggle-control": {
      "suggested_key": {
        "default": "Ctrl+Down"
      },
      "description": "Enter/exit VWL control"
    },
    "add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Up"
      },
      "description": "Bookmark current world"
    }
  }
}
